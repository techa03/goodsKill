<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd "
       default-lazy-init="false">

    <dubbo:application name="goodsKill-provider"/>

    <dubbo:registry address="${zookeeper_address}" check="false" subscribe="false" register=""/>

    <bean id="userAccountServiceImpl" class="org.seckill.service.impl.UserAccountServiceImpl"/>
    <dubbo:service ref="userAccountServiceImpl" interface="org.seckill.service.UserAccountService" timeout="100000"/>
    <!-- 接口服务 -->
    <bean id="goodsServiceImpl" class="org.seckill.service.impl.GoodsServiceImpl"/>
    <dubbo:service ref="goodsServiceImpl" interface="org.seckill.service.GoodsService" timeout="100000"/>

    <bean id="seckillServiceImpl" class="org.seckill.service.impl.SeckillServiceImpl"/>
    <dubbo:service ref="seckillServiceImpl" interface="org.seckill.service.SeckillService" timeout="100000"/>

</beans>